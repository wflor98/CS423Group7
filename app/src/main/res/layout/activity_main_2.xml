<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Container with vertical orientation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FrameLayout to stack TextViewTitle behind DrawView for Title section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/purple_200">

            <!-- TextView for title, behind the DrawView -->
            <TextView
                android:id="@+id/textResult_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="sans-serif"
                android:paddingTop="5dp"
                android:gravity="center"
                android:text="Title Name" />

            <!-- DrawView for drawing on top of the TextView for the title -->
            <wflor4.cs423.textrecognizer.DrawView
                android:id="@+id/draw_view_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />
        </FrameLayout>

        <!-- FrameLayout to stack TextView behind DrawView for Body section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- TextView to display recognized text behind the DrawView -->
            <TextView
                android:id="@+id/textResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="sans-serif"
                android:paddingTop="5dp"
                android:gravity="center"
                android:text="Recognized Text" />

            <!-- DrawView for drawing on top of the TextView for the body -->
            <wflor4.cs423.textrecognizer.DrawView
                android:id="@+id/draw_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />
        </FrameLayout>

        <!-- Button panel with Recognize and Clear buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/purple_200"
            android:layout_gravity="bottom">

            <!-- Recognize button -->
            <Button
                android:id="@+id/buttonRecognize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recognize"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_margin="25dp"
                android:backgroundTint="@color/black"
                android:textColor="@color/white" />

            <!-- Clear button (reset drawing) -->
            <Button
                android:id="@+id/buttonClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Clear"
                android:textAllCaps="false"
                android:layout_margin="25dp"
                android:backgroundTint="@color/black"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
