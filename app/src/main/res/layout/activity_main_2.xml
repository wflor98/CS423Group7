<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Container with vertical orientation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FrameLayout to stack TextViewTitle and DatePicker for Title section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- TextView for title -->
            <TextView
                android:id="@+id/textResult_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="sans-serif"
                android:paddingTop="5dp"
                android:gravity="center"
                android:text="Title Name" />

            <!-- DatePicker with reduced size -->
            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:spinnersShown="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <!-- FrameLayout to stack TextView behind DrawView for Body section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- TextView to display recognized text behind the DrawView -->
            <TextView
                android:id="@+id/textResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="sans-serif"
                android:paddingTop="5dp"
                android:gravity="center"
                android:text="Recognized Text" />

            <!-- DrawView for drawing on top of the TextView for the body -->
            <wflor4.cs423.textrecognizer.DrawView
                android:id="@+id/draw_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />
        </FrameLayout>

        <!-- RadioGroup for selecting between Title and Body -->
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/radioTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title" />

            <RadioButton
                android:id="@+id/radioBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body"
                android:checked="true" /> <!-- Default checked -->
        </RadioGroup>

        <!-- HorizontalScrollView for scrolling the button panel -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <!-- Button panel with Recognize, Add Text, and Clear buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/purple_200"
                android:layout_gravity="bottom">

                <!-- Recognize button -->
                <Button
                    android:id="@+id/buttonRecognize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recognize"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:layout_margin="25dp"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white" />

                <!-- Add Text button -->
                <Button
                    android:id="@+id/buttonAddText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Add Text"
                    android:textAllCaps="false"
                    android:layout_margin="25dp"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white" />

                <!-- Clear button (reset drawing) -->
                <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Clear"
                    android:textAllCaps="false"
                    android:layout_margin="25dp"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white" />
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
